{
  "name": "@davesag/competing-services-example",
  "version": "1.1.0",
  "description": "An example of how to use the AMQP-Simple-PubSub library to implement competing micro-services",
  "author": "Dave Sag <davesag@gmail.com>",
  "type": "commonjs",
  "license": "MIT",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/davesag"
  },
  "private": true,
  "main": "src/index.js",
  "engines": {
    "node": ">= 10.15.3"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "keywords": [
    "amqp",
    "message-queue",
    "pubsub",
    "pub-sub",
    "publisher",
    "subscriber",
    "microservices",
    "micro-services"
  ],
  "repository": "https://github.com/davesag/competing-services-example.git",
  "bugs": {
    "url": "https://github.com/davesag/competing-services-example/issues"
  },
  "homepage": "https://github.com/davesag/competing-services-example#README",
  "scripts": {
    "eslint-check": "eslint --print-config src/index.js | eslint-config-prettier-check",
    "lint": "eslint .",
    "prettier": "prettier --write '**/*.{js,json,md}'",
    "start": "node src/index.js",
    "backend": "docker-compose up -d amqp",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test mocha ./test/unit/ --require ./test/unitTestHelper.js --recursive",
    "test:unit:cov": "NODE_ENV=test nyc mocha ./test/unit/ --require ./test/unitTestHelper.js --recursive",
    "snyk-protect": "snyk protect"
  },
  "dependencies": {
    "amqp-simple-pub-sub": "^1.0.12"
  },
  "devDependencies": {
    "ajv": "^8.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^5.1.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^9.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "proxyquire": "^2.1.3",
    "sinon": "^11.1.0",
    "sinon-chai": "^3.5.0",
    "snyk": "^1.419.1",
    "supertest": "^6.1.4",
    "wait-until": "0.0.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "never",
    "arrowParens": "avoid",
    "trailingComma": "none",
    "printWidth": 100
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/index.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "snyk": true
}
